generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Admin {
  id          String    @id @default(uuid())
  name        String
  email       String    @unique
  phoneNumber String
  role        AdminRole @default(manager)
  password    String

  // Manager-specific fields (optional)
  commissions Int?
  lastUpdate  DateTime?

  createdAt DateTime @default(now()) @db.Timestamptz()
  updatedAt DateTime @updatedAt @db.Timestamptz()
}

enum AdminRole {
  manager
  super
}

enum Entity {
  admin
}

model AuditLog {
  id       String @id @default(uuid())
  entity   Entity
  entityId String
  action   String
  // university 
}
